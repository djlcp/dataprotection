
<h1>Categories</h1>

<%= link_to 'New Category', new_admin_category_path %>

<table class="indexTable">
  <thead>
    <tr>
      <th class="thTitle">Title</th>
      <th class="thContent">Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr class="rowAlternateColor">
        <td><%= category.title %></td>
        <td><%= category.group.title %></td>
        <td class="showEditDestroyColumns"><%= link_to 'Show', admin_category_path(category) %></td>
        <td class="showEditDestroyColumns"><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td class="showEditDestroyColumns"><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
