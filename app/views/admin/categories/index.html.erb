
<h1>Categories</h1>


<%= form_tag admin_categories_path, method: :get, id: "search-form", style: 'margin-bottom: 20px' do %>
  <div class="row row-align-center">
    <%= text_field_tag(
      :search,
      params[:search],
      placeholder: "Search Categories",
      style: 'padding: 10px 15px; font-size: 16px; width:50%')
    %>
    <%= submit_tag "Search", :name => nil, class: 'button' %>
  </div>

<% end %>


<%= link_to 'Add New Category', new_admin_category_path %>

<table class="indexTable" style="width:100%">
  <thead>
    <tr>
      <th class="thTitle">Title</th>
      <th class="thContent">Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr class="rowAlternateColor">
        <td><%= category.title.titleize %></td>
        <td><%= category.group.title.titleize %></td>
        <td class="showEditDestroyColumns"><%= link_to 'Show', admin_category_path(category), class: 'link' %></td>
        <td class="showEditDestroyColumns"><%= link_to 'Edit', edit_admin_category_path(category), class: 'link' %></td>
        <td class="showEditDestroyColumns"><%= link_to 'Destroy', admin_category_path(category), class: 'link', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
