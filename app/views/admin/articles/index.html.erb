
<p id="notice"><%= notice %></p>

<div class="flex-container">
  <div>
        <h1>Articles</h1>

        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Published</th>
              <th>Title</th>
              <th>Content</th>
              <th>Number</th>
              <th>Letter</th>
              <th>Views</th>
              <th>Category</th>
              <th>Group</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.id %></td>
                <% if article.published %>
                  <td> published </td>
                <% else %>
                  <td> Unpublished </td>
                <% end %>
                <td><%= article.title %></td>
                <td><%= article.content.truncate(17) %></td>
                <td><%= article.number %></td>
                <td><%= article.letter %></td>
                <td><%= article.views %></td>
                <td><%= article.category.title %></td>
                <td><%= article.category.group.title %></td>

                <td><%= link_to 'Show', admin_article_path(article) %></td>
                <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
                <td><%= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Article', new_admin_article_path %>

    </div>
</div>
