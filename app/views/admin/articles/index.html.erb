<div class="flex-container">
  <div style="width:100%">
    <h1>Articles</h1>

    <%= render 'table', articles: @articles %>

    <% if @articles.blank? %>
      <% if params[:search] %>
        <h4>There are no Articles containing <%= params[:search] %>.</h4>
      <% else %>
        <h4>There are no articles to display.</h4>
      <% end %>

    <% end %>

  </div>
</div>
