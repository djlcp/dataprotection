<%= form_for [:admin, @article] do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :published %>
    <%= form.check_box :published %>

  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :article_number %>
  </div>

  <div class="field">
    <%= form.label :letter %>
    <%= form.text_field :letter, id: :article_letter %>
  </div>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :article_content %>
  </div>


  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id,
    options_for_select(Category.all.map { |category| [category.title, category.id] }),
    { prompt: true }
    %>
  </div>

  <div class="field">
    <p>Link it to another article</p>
    <%= form.label :associated_article_ids %>
    <%= form.select :associated_article_ids,
    options_for_select(Article.all.map { |article| [article.title, article.id] }),
    { prompt: true },
    { multiple: true }
    %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
