
<p id="notice"><%= notice %></p>

<div class="flex-container">
  <div>
        <h1>Articles</h1>

        <% if @articles.blank? %>
          <h4>There are no Articles containing <%= params[:search] %>.</h4>
        <% end %>

        <table  class="articlesTable">
          <thead>
            <tr>
              <th class="IDColumn">ID</th>
              <th class="titleColumn">Title</th>
              <th class="contentColumn">Content</th>
              <th>Number</th>
              <th>Views</th>
              <th class="categoryColumn">Category</th>
              <th class="groupColumn">Group</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.content.truncate(17) %></td>
                <td><%= article.number %></td>
                <td><%= article.letter %></td>
                <td><%= article.views %></td>
                <td><%= article.category.title %></td>
                <td><%= article.category.group.title %></td>

                <td><%= link_to 'Show', article %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
    </div>
</div>
