
<p id="notice"><%= notice %></p>

<div class="flex-container">
  <div>
        <h1>Articles</h1>

        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Content</th>
              <th>Number</th>
              <th>Views</th>
              <th>Category</th>
              <th>Group</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.content.truncate(17) %></td>
                <td><%= article.number %></td>
                <td><%= article.views %></td>
                <td><%= article.category.title %></td>
                <td><%= article.category.group.title %></td>

                <td><%= link_to 'Show', article %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
    </div>




    <div>

      <h1>Categories</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Group</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

          <% @categories.each do |category| %>
            <tr>
              <td><%= category.title %></td>
              <td><%= category.group.title %></td>
              <td><%= link_to 'Show', category %></td>
            </tr>

          <% end %>
        </tbody>
      </table>
      </table>

      <br>
    </div>




    <div>
      <h1>Groups</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Group</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

          <% @groups.each do |group| %>
            <tr>
              <td><%= group.title %></td>
              <td><%= link_to 'Show', group %></td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
      </table>

      <br>
    </div>
</div>
